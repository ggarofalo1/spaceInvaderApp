<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/helpGridLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="2"
    android:orientation="vertical"
    android:useDefaultMargins="true">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/HelpConstraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_row="0"
        android:layout_column="0"
        android:background="@drawable/spacebg"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/helpTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingTop="@dimen/fab_margin"
            android:text="@string/help"
            android:textAlignment="center"
            android:textColor="@color/colorTimer"
            android:textSize="@dimen/help_text_size"
            tools:layout_editor_absoluteX="73dp"
            tools:layout_editor_absoluteY="0dp" />

        <Button
            android:id="@+id/returnToGame"
            android:layout_width="278dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="428dp"
            android:background="@color/gameoverpopup"
            android:gravity="bottom|center"
            android:text="@string/returnToGame"
            android:textColor="@color/colorTimer"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/helpTitle" />

        <ImageView
            android:id="@+id/shipImageView"
            android:layout_width="89dp"
            android:layout_height="309dp"
            android:layout_marginStart="256dp"
            android:layout_marginTop="68dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/shuttle2" />

        <ImageView
            android:id="@+id/gestureImageView"
            android:layout_width="75dp"
            android:layout_height="131dp"
            android:layout_marginStart="104dp"
            android:layout_marginTop="180dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/gesture" />

        <ImageView
            android:id="@+id/arrowImageView"
            android:layout_width="123dp"
            android:layout_height="85dp"
            android:layout_marginStart="140dp"
            android:layout_marginTop="164dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/arrow" />

        <TextView
            android:id="@+id/gestureTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="140dp"
            android:text="@string/help_one"
            android:textColor="@color/colorTimer"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/dodgeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginTop="352dp"
            android:text="@string/help_two"
            android:textColor="@color/colorTimer"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/rockImageView"
            android:layout_width="94dp"
            android:layout_height="77dp"
            android:layout_marginStart="244dp"
            android:layout_marginTop="352dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/rock50x50" />

        <TextView
            android:id="@+id/scoreTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="460dp"
            android:text="@string/help_three"
            android:textColor="@color/colorTimer"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

</GridLayout>